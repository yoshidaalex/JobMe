<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent" >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_rounded_rectangle"
        android:orientation="vertical" >

        <Button
            android:id="@+id/btnMessage"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@android:color/transparent"
            android:text="Message"
            android:textColor="@color/main_page_status_dialog_blue"
            android:textSize="10pt" />

		<TextView
	        android:id="@+id/textView5"
	        android:layout_width="fill_parent"
	        android:layout_height="0.1dp"
	        android:background="@color/text_bg_border_color" />

        <Button
            android:id="@+id/btnFacebook"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@android:color/transparent"
            android:text="Share to Facebook"
            android:textColor="@color/main_page_status_dialog_blue"
            android:textSize="10pt" />
        
    </LinearLayout>

    <Button
        android:id="@+id/btnCancel"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/linearLayout1"
        android:layout_marginBottom="@dimen/status_dialog_cancel_top_margin"
        android:layout_marginTop="@dimen/status_dialog_cancel_top_margin"
        android:background="@drawable/background_rounded_rectangle"
        android:text="Cancel"
        android:textColor="@color/main_page_status_dialog_blue"
        android:textSize="10pt"
        android:textStyle="bold" />

</RelativeLayout>