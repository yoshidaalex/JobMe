<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.search.jobme"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="416dp" >
	
    <RelativeLayout
        android:id="@+id/sub"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        
	    <LinearLayout
	        android:id="@+id/top_layout"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="20dp"
	        android:layout_marginRight="20dp"
	        android:layout_marginTop="20dp"
	        android:background="@drawable/manage_top_rounded_rectangle"
	        android:orientation="horizontal" >
			
	        <com.mikhaellopez.circularimageview.CircularImageView
	            android:id="@+id/user_picture"
	            android:layout_width="60dp"
	            android:layout_height="60dp"
	            android:layout_alignParentRight="true"
	            android:layout_alignParentTop="false"
	            android:layout_centerHorizontal="false"
	            android:layout_marginLeft="20dp"
	            android:layout_marginTop="20dp"
	            android:background="@drawable/candidate_default"
	            app:border="false"
	            app:border_color="@color/white_color"
	            app:border_width="1.0dip"
	            app:shadow="true" />
	
	        <LinearLayout
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_marginBottom="15dp"
	            android:layout_marginLeft="12dp"
	            android:layout_marginTop="20dp"
	            android:orientation="vertical" >
	            
	            <TextView
	                android:id="@+id/txt_job_function"
	                android:layout_width="wrap_content"
	                android:layout_height="match_parent"
	                android:gravity="center_vertical"
	                android:text="Sokolov"
	                android:textColor="@color/text_color1"
	                android:textSize="13sp" />
	
	            <TextView
	                android:id="@+id/txt_headline"
	                android:layout_width="wrap_content"
	                android:layout_height="match_parent"
	                android:layout_marginTop="3dp"
	                android:gravity="center_vertical"
	                android:text="Software Engineer"
	                android:textColor="@color/white_color"
	                android:textSize="14sp" />
	
	            <TextView
	                android:id="@+id/txt_location"
	                android:layout_width="wrap_content"
	                android:layout_height="match_parent"
	                android:layout_marginTop="7dp"
	                android:gravity="center_vertical"
	                android:text="Russia"
	                android:textColor="@color/text_color1"
	                android:textSize="13sp" />
	
	            <LinearLayout
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:layout_marginTop="20dp" >
	
	                <LinearLayout
	                    android:layout_width="fill_parent"
	                    android:layout_height="match_parent"
	                    android:layout_weight="1"
	                    android:orientation="vertical" >
	
	                    <TextView
	                        android:id="@+id/textView1"
	                        android:layout_width="wrap_content"
	                        android:layout_height="wrap_content"
	                        android:text="EXPERIENCE"
	                        android:textSize="11sp" />
	
	                    <TextView
	                        android:id="@+id/txt_experience_year"
	                        android:layout_width="wrap_content"
	                        android:layout_height="wrap_content"
	                        android:layout_marginTop="3dp"
	                        android:text="3 years"
	                        android:textColor="@color/white_color"
	                        android:textSize="11sp" />
	
	                </LinearLayout>
	
	                <LinearLayout
	                    android:layout_width="fill_parent"
	                    android:layout_height="match_parent"
	                    android:layout_weight="1"
	                    android:orientation="vertical" >
	
	                    <TextView
	                        android:id="@+id/TextView01"
	                        android:layout_width="wrap_content"
	                        android:layout_height="wrap_content"
	                        android:text="LATEST ACTIVITY"
	                        android:textSize="11sp" />
	
	                    <TextView
	                        android:id="@+id/txt_last_activity"
	                        android:layout_width="wrap_content"
	                        android:layout_height="wrap_content"
	                        android:layout_marginTop="3dp"
	                        android:text="This week"
	                        android:textColor="@color/white_color"
	                        android:textSize="11sp" />
	
	                </LinearLayout>
	            </LinearLayout>
	
	        </LinearLayout>
	
	    </LinearLayout>
	
	    <LinearLayout
	        android:id="@+id/bottom_layout"
	        android:layout_width="match_parent"
	        android:layout_height="220dp"
	        android:layout_below="@id/top_layout"
	        android:layout_marginLeft="20dp"
	        android:layout_marginRight="20dp"
	        android:background="@drawable/manage_bottom_rounded_rectangle"
	        android:orientation="vertical" >

	        <LinearLayout
	            android:id="@+id/skill_layout"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:layout_marginBottom="7dp"
	            android:layout_marginTop="10dp"
	            android:gravity="center_vertical" >

	            <TextView
	                android:id="@+id/txt_skill"
	                android:layout_width="fill_parent"
	                android:layout_height="match_parent"
	                android:layout_marginLeft="20dp"
	                android:layout_marginRight="20dp"
	                android:gravity="center_horizontal"
	                android:text="Ecommerce"
	                android:textColor="@color/text_color1"
	                android:textSize="12sp"
	                android:textStyle="bold" />

	        </LinearLayout>
	
	        <RelativeLayout
	            android:id="@+id/experience_layout"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:layout_marginTop="7dp"
	            android:gravity="center_vertical" >
	
	            <ImageView
	                android:id="@+id/img_experience"
	                android:layout_width="22dp"
	                android:layout_height="22dp"
	                android:layout_centerVertical="false"
	                android:layout_marginLeft="20dp"
	                android:src="@drawable/experience" />
	
	            <LinearLayout
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_marginLeft="15dp"
	                android:layout_toRightOf="@id/img_experience"
	                android:orientation="vertical" >
	
	                <LinearLayout
	                    android:id="@+id/experience_1"
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:layout_alignParentStart="false"
	                    android:orientation="vertical" >
	
	                    <TextView
	                        android:id="@+id/txt_headline1"
	                        android:layout_width="wrap_content"
	                        android:layout_height="wrap_content"
	                        android:text="Software Engineer"
	                        android:textColor="@color/text_color"
	                        android:textSize="12sp" />

	                    <TextView
	                        android:id="@+id/txt_company_name1"
	                        android:layout_width="wrap_content"
	                        android:layout_height="wrap_content"
	                        android:layout_marginTop="5dp"
	                        android:text="JobMe"
	                        android:textColor="@color/text_bg_border_color"
	                        android:textSize="10sp" />

	                    <TextView
	                        android:id="@+id/txt_date1"
	                        android:layout_width="wrap_content"
	                        android:layout_height="wrap_content"
	                        android:layout_marginTop="5dp"
	                        android:text="JobMe"
	                        android:textColor="@color/text_bg_border_color"
	                        android:textSize="10sp" />

	                </LinearLayout>
	
	            </LinearLayout>
	            
	            
	
	        </RelativeLayout>
	
	        <RelativeLayout
	            android:id="@+id/education_layout"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:layout_marginTop="10dp"
	            android:gravity="center_vertical" >
	
	            <ImageView
	                android:id="@+id/img_education"
	                android:layout_width="22dp"
	                android:layout_height="22dp"
	                android:layout_centerVertical="false"
	                android:layout_marginLeft="20dp"
	                android:src="@drawable/function" />
	
	            <LinearLayout
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_marginLeft="15dp"
	                android:layout_toRightOf="@id/img_education" >
	
	                <LinearLayout
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:layout_alignParentStart="false"
	                    android:orientation="vertical" >
	
	                    <TextView
	                        android:id="@+id/txt_school"
	                        android:layout_width="wrap_content"
	                        android:layout_height="wrap_content"
	                        android:text="Software Engineer"
	                        android:textColor="@color/text_color"
	                        android:textSize="12sp" />

	                    <TextView
	                        android:id="@+id/txt_degree"
	                        android:layout_width="wrap_content"
	                        android:layout_height="wrap_content"
	                        android:layout_marginTop="5dp"
	                        android:text="JobMe"
	                        android:textColor="@color/text_bg_border_color"
	                        android:textSize="10sp" />

	                    <TextView
	                        android:id="@+id/txt_date2"
	                        android:layout_width="wrap_content"
	                        android:layout_height="wrap_content"
	                        android:layout_marginTop="5dp"
	                        android:text="JobMe"
	                        android:textColor="@color/text_bg_border_color"
	                        android:textSize="10sp" />

	                </LinearLayout>
	
	            </LinearLayout>
	            
	            
	
	        </RelativeLayout>
	
	    </LinearLayout>
	    
	    <ImageView
	        android:id="@+id/img_interest"
	        android:layout_width="80dp"
	        android:layout_height="wrap_content"
	        android:layout_centerHorizontal="true"
	        android:layout_marginTop="50dp"
	        android:alpha="0"
	        android:src="@drawable/interest" />
	
        <ImageView
            android:id="@+id/img_no_interest"
            android:layout_width="115dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:alpha="0"
            android:src="@drawable/no_interest" />
	</RelativeLayout>

</FrameLayout>
