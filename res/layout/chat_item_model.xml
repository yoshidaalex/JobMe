<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.search.jobme"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/ly_send_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/left_profile_img"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:gravity="left|center" >

            <com.mikhaellopez.circularimageview.CircularImageView
                android:id="@+id/iv_sendmessage"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                app:border="false"
                app:border_color="@color/white_color"
                app:border_width="1.0dip"
                app:shadow="true" />
            
        </LinearLayout>

        <TextView
            android:id="@+id/txt_sendmessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="3dp"
            android:background="@drawable/chatfrom_bg_normal"
            android:gravity="center_vertical|center_horizontal"
            android:paddingBottom="5dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="5dp"
            android:text="Hello, How  are you. faafasasdasd"
            android:textColor="@color/white_color" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/ly_receivemessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:gravity="right"
        android:orientation="horizontal" >
   		
   		<LinearLayout
   		    android:id="@+id/profile_img"
   		    android:layout_width="70dp"
   		    android:layout_height="wrap_content"
   		    android:layout_alignParentRight="true"
   		    android:gravity="right" >

   		    <com.mikhaellopez.circularimageview.CircularImageView
   		        android:id="@+id/iv_receivemessage"
   		        android:layout_width="60dp"
   		        android:layout_height="60dp"
   		        android:layout_alignParentTop="true"
   		        android:layout_centerHorizontal="true"
   		        app:border="false"
   		        app:border_color="@color/white_color"
   		        app:border_width="1.0dip"
   		        app:shadow="true" />
   		    
        </LinearLayout>
        
		<TextView
		    android:id="@+id/txt_receivemessage"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_alignParentRight="false"
		    android:layout_marginRight="10dp"
		    android:layout_marginTop="3dp"
		    android:layout_toLeftOf="@id/profile_img"
		    android:background="@drawable/chatto_bg_normal"
		    android:gravity="center_vertical|center_horizontal"
		    android:paddingBottom="5dp"
		    android:paddingLeft="20dp"
		    android:paddingRight="20dp"
		    android:paddingTop="5dp"
		    android:text="Hello,How  are you."
		    android:textColor="@color/gray" />

     </RelativeLayout>

</LinearLayout>